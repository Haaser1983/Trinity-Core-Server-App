# Environment Configuration
NODE_ENV=development

# Server
PORT=3001

# Database Configuration (TrinityCore MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=trinity
DB_PASS=trinity

# Database Names
DB_NAME_AUTH=auth
DB_NAME_CHARACTERS=characters
DB_NAME_WORLD=world
DB_NAME_HOTFIXES=hotfixes

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# WoWHead API
WOWHEAD_CACHE_DIR=./cache/wowhead
WOWHEAD_CACHE_TTL_HOURS=24
WOWHEAD_RATE_LIMIT=10
WOWHEAD_RATE_WINDOW_MS=1000

# Logging
LOG_LEVEL=debug
